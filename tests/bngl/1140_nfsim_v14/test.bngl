# intramolecular bond
begin model
begin parameters
	ITERATIONS  100
    MCELL_DIFFUSION_CONSTANT_3D_A 1e-6

    MCELL_NO_COMPARTMENT_SIZE 1/8
    NA_um3 6.022e8
    VOL_RXN 1
    UNIMOL_RXN 10000
    MCELL_REDEFINE_VOL_RXN NA_um3
    
    kon1     1 * UNIMOL_RXN
	koff1    0.3 * UNIMOL_RXN
end parameters
begin species
	A(b,c)  2000
end species
begin reaction rules
    A(b,c)  <->  A(b!1,c!1)    kon1, koff1
end reaction rules
begin observables
    Molecules A_withBond A(b!1,c!1)
end observables
end model

generate_network({overwrite=>1})
simulate({method=>"ode",t_end=>1e-3,n_steps=>1000})


