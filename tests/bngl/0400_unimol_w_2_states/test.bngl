# simple_system.bngl
begin model
begin parameters
	kon     10 *1e7
	koff    5 *1e7
	kcat    0.6 *1e6
	dephos  0.5 *1e6
	
	ITERATIONS  10
    MCELL_DIFFUSION_CONSTANT_3D_X 9e-5
    MCELL_DIFFUSION_CONSTANT_3D_Y 8e-5
    MCELL_NO_COMPARTMENT_SIZE 1/16	
end parameters

begin species
	X(p~0,p~0)  500
end species

begin reaction rules
	X(p~0) ->  X(p~1) kcat  # 1 rxn with twice the rate
end reaction rules

begin observables
    Molecules X_free  X(p~0,y)
    Molecules Xp_free X(p~1,y)
    Molecules Xpp     X(p~1,p~1)
    #Molecules XY  b   X(y!1).Y(x!1)
end observables
end model

generate_network({overwrite=>1})
simulate_ode({suffix=>"ode",t_end=>100,n_steps=>100})
resetConcentrations()
simulate_ssa({suffix=>"ssa",t_end=>100,n_steps=>100})
resetConcentrations()
writeXML()

