# simple_system.bngl
# simple binding, unbinding, and phosphorylation system
# -sim 100 -oSteps 100

begin model
begin parameters
    ITERATIONS  10
    MCELL_DIFFUSION_CONSTANT_3D_X 9e-5
    MCELL_DIFFUSION_CONSTANT_3D_Y 8e-5
    MCELL_NO_COMPARTMENT_SIZE 1/8
   
	kon     15e6 *10
	koff    10e6 *10
	kcat    0.6 *1e6
	dephos  0.5 *1e6
end parameters
begin species
	X(y,p~0)  500
	X(y,p~1)  0
	Y(x)      50
end species
begin reaction rules
	X(p~1)             ->  X(p~0)               dephos
	X(y,p~0) + Y(x)    ->  X(y!1,p~0).Y(x!1)    kon
	X(y!1,p~0).Y(x!1)  ->  X(y,p~0) + Y(x)      koff
	X(y!1,p~0).Y(x!1)  ->  X(y,p~1) + Y(x)      kcat
end reaction rules
begin observables
    #Molecules X_free  X(p~0,y)
    Molecules Xp_free X(p~1,y)
    #Molecules XY      X(y!1).Y(x!1)
end observables
end model

